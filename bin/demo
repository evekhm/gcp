#! /bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ "$#" -ne 1 ]; then
  echo "Usage: ${BASH_SOURCE[0]} PROJECT_ID"
  echo "Where PROJECT_ID is either existing one or a new unique name (only for Argolis environment)"
else
  PROJECT_ID=$1
fi
source "$DIR/SET"

# Sets the project into config and updates settings
./"$DIR"/init "$PROJECT_ID"   # Project ID  - either new or existing

# Runs flow on the active config
./"$DIR"/run

# clean